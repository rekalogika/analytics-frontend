{%- block td_class -%}
    analytics-dimension-{{ element.key|replace({"@": "--", ".": "--"}) }}
    {% if element.content.node.measure.key is defined -%}
        analytics-measure
        analytics-measure-{{ element.content.node.measure.key }}
    {%- else -%}
        analytics-dimension
    {%- endif -%}
