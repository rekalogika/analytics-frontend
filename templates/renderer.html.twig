{%- block no_data -%}
    <p>No Data</p>
{%- endblock no_data -%}

{%- block exception -%}
    <p>{{ exception|analytics_to_html }}</p>
{%- endblock exception -%}

{%- block table -%}
    {%- if element.rows|length == 0 -%}
        {{ block("no_data") }}
    {%- else -%}
        <table {{ block("table_attr") }}>
            {% for child in children %}{{ child|raw }}{% endfor %}
        </table>
    {%- endif -%}
{%- endblock table -%}

{%- block thead -%}
    <thead {{ block("thead_attr") }}>
        {% for child in children %}{{ child|raw }}{% endfor %}
    </thead>
{%- endblock thead -%}

{%- block tbody -%}
    <tbody {{ block("tbody_attr") }}>
        {% for child in children %}{{ child|raw }}{% endfor %}
    </tbody>
{%- endblock tbody -%}

{%- block tfoot -%}
    <tfoot {{ block("tfoot_attr") }}>
        {% for child in children %}{{ child|raw }}{% endfor %}
    </tfoot>
{%- endblock tfoot -%}

{%- block tr -%}
    <tr {{ block("tr_attr") }}>
        {% for child in children %}{{ child|raw }}{% endfor %}
    </tr>
{%- endblock tr -%}

{%- block td -%}
    <td {{ block("td_attr") }} colspan="{{ element.columnSpan }}" rowspan="{{ element.rowSpan }}">
        {{ content|analytics_to_html }}
    </td>
{%- endblock td -%}

{%- block tf -%}
    <td {{ block("tf_attr") }} colspan="{{ element.columnSpan }}" rowspan="{{ element.rowSpan }}">
        {{ content|analytics_to_html }}
    </td>
{%- endblock tf -%}

{%- block th -%}
    <th {{ block("th_attr") }} colspan="{{ element.columnSpan }}" rowspan="{{ element.rowSpan }}">
        {{ content|analytics_to_html }}
    </th>
{%- endblock th -%}

{# tag attrs #}

{%- block table_attr -%}
    class="{{ block("table_class") }}"
{%- endblock table_attr -%}

{%- block thead_attr -%}
    class="{{ block("thead_class") }}"
{%- endblock thead_attr -%}

{%- block tbody_attr -%}
    class="{{ block("tbody_class") }}"
{%- endblock tbody_attr -%}

{%- block tfoot_attr -%}
    class="{{ block("tfoot_class") }}"
{%- endblock tfoot_attr -%}

{%- block tr_attr -%}
    class="{{ block("tr_class") }}"
{%- endblock tr_attr -%}

{%- block td_attr -%}
    class="{{ block("td_class") }}"
    data-block="{{ element.generatingBlock }}"
{%- endblock td_attr -%}

{%- block tf_attr -%}
    class="{{ block("tf_class") }}"
    data-block="{{ element.generatingBlock }}"
{%- endblock tf_attr -%}

{%- block th_attr -%}
    class="{{ block("th_class") }}"
    data-block="{{ element.generatingBlock }}"
{%- endblock th_attr -%}

